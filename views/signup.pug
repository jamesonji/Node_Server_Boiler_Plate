extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='fname') First Name:
            input#name.form-control(type='text', placeholder='first name' name='fname')
          div.form-group
            label(for='lname') Last Name:
            input#name.form-control(type='text', placeholder='last name' name='lname')
          div.form-group
            label(for='username') User Name:
            input#name.form-control(type='text', placeholder='user name' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up
          a(href="/signin") Sign In