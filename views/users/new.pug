extends ../layout

block content
  h1 New User

  // register form
  form(method='POST' action='/users')
    div.form-group
      label(for='fname') First Name:
      input#fname.form-control(type='text', placeholder='first name' name='fname')
    div.form-group
      label(for='lname') Last Name:
      input#lname.form-control(type='text', placeholder='last name' name='lname')
    div.form-group
      label(for='username') User Name:
      input#username.form-control(type='text', placeholder='user name' name='username')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='name@email.com' name='email')
    div.form-group
      label(for='pw') Password:
      input#pw.form-control(type='password' name='password')
    button(type='submit') Create